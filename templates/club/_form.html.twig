<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 border border-dark rounded p-4">
            

            {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}

            {% for field in ['NomClub', 'FonctionClub', 'DescriptionClub', 'TresorieClub', 'LocalClub', 'NombreStudentClub'] %}
                <div class="form-group">
                    {{ form_label(form[field], null, {'label_attr': {'class': 'text-dark'}}) }}
                    {{ form_widget(form[field], {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form[field]) %}
                        <div class="text-danger">
                            {{ form_errors(form[field]) }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}

            <button type="submit" class="btn btn-primary">Save</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
