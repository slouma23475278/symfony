{% extends 'base.html.twig' %}

{% block title %}Club CRUD {% endblock %}

{% block body %}
    <h1>Club index</h1>
    <a href="{{ path('app_club_new') }}" class="btn btn-success">Create New</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomClub</th>
                <th>FonctionClub</th>
                <th>DescriptionClub</th>
                <th>LogoClub</th>
                <th>TresorieClub</th>
                <th>LocalClub</th>
                <th>NombreStudentClub</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.id }}</td>
                <td>{{ club.NomClub }}</td>
                <td>{{ club.FonctionClub }}</td>
                <td>{{ club.DescriptionClub }}</td>
                <td>{{ club.TresorieClub }}</td>
                <td>{{ club.LocalClub }}</td>
                <td>{{ club.NombreStudentClub }}</td>
                <td>
                    <a href="{{ path('app_club_show', {'id': club.id}) }}" class="btn btn-primary btn-sm mr-1">Show</a>
                    <a href="{{ path('app_club_edit', {'id': club.id}) }}" class="btn btn-secondary btn-sm">Edit</a>
                    <form action="{{ path('app_club_delete', {'id': club.id}) }}" method="post" style="display: inline-block;">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                    </form>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
