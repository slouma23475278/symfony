<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 border border-dark rounded p-4">
            
            {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
            {{ form_widget(form._token) }}

            {% for field in ['typeEvenement', 'nomEvenement', 'descriptionEvenement', 'lienFichier', 'destinationEvenement', 'club', 'lecture'] %}
                <div class="form-group">
                    {{ form_label(form[field], null, {'label_attr': {'class': 'text-dark'}}) }}
                    {{ form_widget(form[field], {'attr': {'class': 'form-control'}}) }}
                    {% if form_errors(form[field]) %}
                        <div class="text-danger">
                            {{ form_errors(form[field]) }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}

            <div class="form-group">
                {{ form_label(form.timeEventDebut, null, {'label_attr': {'class': 'text-dark'}}) }}
                {{ form_widget(form.timeEventDebut, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                {% if form_errors(form.timeEventDebut) %}
                    <div class="text-danger">
                        {{ form_errors(form.timeEventDebut) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(form.timeEventFin, null, {'label_attr': {'class': 'text-dark'}}) }}
                {{ form_widget(form.timeEventFin, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                {% if form_errors(form.timeEventFin) %}
                    <div class="text-danger">
                        {{ form_errors(form.timeEventFin) }}
                    </div>
                {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Save</button>

            {{ form_end(form,{'render_rest': false}) }}
        </div>
    </div>
</div>
